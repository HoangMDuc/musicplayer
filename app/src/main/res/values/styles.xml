<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">53dp</item>
    </style>
    <style name="TextViewForm" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">117dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="LinearLayoutStyle1">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="ImageViewStyle1">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="TextViewStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
    </style>

</resources>